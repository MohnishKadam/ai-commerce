generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id     Int    @id @default(autoincrement())
  name   String
  price  Int
  stock  Int
  orders Order[]
}


model Order {
  id        Int      @id @default(autoincrement())
  productId Int
  status    String
  createdAt DateTime @default(now())
  stripePaymentIntentId String?


  product Product @relation(fields: [productId], references: [id])
}
